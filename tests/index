import chai from 'chai';
import chaiHttp from 'chai-http';
import server from '../src/index';

chai.use(chaiHttp);
chai.should();

describe('Basic server', () => {
  afterEach(() => {
    server.close();
  });

  describe('Server', () => {
    it('tests that server is running at the current port', async () => {
      chai.request(server);
      server.port.should.be(3005).end((err, res) => {
        res.should.have.status(200);
        done();
      });
    });
  });

  describe('GET /', () => {
    it('should server the client on /', (done) => {
      chai
        .request(server)
        .get('/')
        .end((err, res) => {
          res.should.have.status(200);
          done();
        });
    });
  });
});
